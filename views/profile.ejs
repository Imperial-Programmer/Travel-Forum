<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=anv, initial-scale=1.0" />
    <title>
        Profile
    </title>


    <%- include('layouts/vendor_css') %>

        <style>
            nav {
                background: rgb(33, 33, 33);
                width: 100%;
                padding: 10px 0;
            }

            nav .menu {
                max-width: 1250px;

                margin: auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0 20px;
            }

            .menu .logo a {
                text-decoration: none;
                color: white;
                font-size: 25px;
                font-weight: 600;
                padding: 8px 15px;
                border-radius: 5px;
                transition: all 0.3s ease;
            }

            .menu .logo a:hover {
                background: orange;
                color: black;
            }

            .menu ul {
                display: inline-flex;
            }

            .menu ul li {
                list-style: none;
                margin-left: 7px;
            }

            .menu ul li a {
                text-decoration: none;
                color: white;
                font-size: 18px;
                font-weight: 500;

                padding: 8px 15px;
                border-radius: 5px;
                transition: all 0.3s ease;
            }

            .menu ul li a:hover {
                background: orange;
                color: black;
            }

            #container-box {
                padding: 20px;
            }

            .form-col,
            .topic-col {
                min-width: 16em;
            }

            .last-post-col,
            .created-col,
            .author-col {
                min-width: 12em;
            }

            .post-col {
                min-width: 20em;
            }

            .feather-16 {
                width: 16px;
                height: 16px;
            }

            .feather-24 {
                width: 24px;
                height: 24px;
            }

            .feather-32 {
                width: 32px;
                height: 32px;
            }
        </style>


</head>

<body>
    <nav>
        <div class="menu">
            <div class="logo">
                <a href="/">Web Forum</a>
            </div>
            <%- include('layouts/menu', {ses : session}) %>
        </div>
    </nav>

    <div class="container" id="container-box">
        <% if (msgSuccess !=null && msgSuccess !='' ) { %>
            <div class="alert alert-success" role="alert">
                <%= msgSuccess %>
            </div>
            <% } %>

                <% if (msgError !=null && msgError !='' ) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= msgError %>
                    </div>
                    <% } %>
                        <div class="row">
                            <div class="col-sm-10">
                                <h1>Profil</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <!--left col-->

                                <div class="text-center">
                                    <% if (profile.photo !=null) { %>
                                        <img src="/profile_picture/<%= profile.photo %>"
                                            class="avatar img-circle img-thumbnail" alt="avatar">
                                        <% } else { %>
                                            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png"
                                                class="avatar img-circle img-thumbnail" alt="avatar">
                                            <% } %>

                                                <h6>Upload Foto Profil...</h6>
                                                <form action="/profile/change-photo" method="POST"
                                                    enctype="multipart/form-data">
                                                    <input type="file"
                                                        class="text-center center-block file-upload form-control"
                                                        id="file-image" name="photofiles" accept="image/*">
                                                    <button type="submit" class="btn btn-primary btn-sm mt-2">Ganti Foto
                                                        Profil</button>
                                                </form>

                                </div>
                                </hr><br>


                                <ul class="list-group">
                                    <li class="list-group-item text-muted">Aktivitas <i
                                            class="fa fa-dashboard fa-1x"></i></li>
                                    <li class="list-group-item"><strong>Thread</strong>
                                        <span class="float-right">
                                            <%= stat.thread_count %>
                                        </span>
                                    </li>
                                    <li class="list-group-item"><strong>Balasan Thread</strong>
                                        <span class="float-right">
                                            <%= stat.thread_reply_count %>
                                        </span>
                                    </li>
                                </ul>


                            </div>
                            <!--/col-3-->
                            <div class="col-sm-9">

                                <!-- Bootstrap CSS -->
                                <!-- jQuery first, then Bootstrap JS. -->
                                <!-- Nav tabs -->

                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home"
                                            role="tab" aria-controls="home" aria-selected="true">Profil</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="settings-tab" data-toggle="tab" href="#settings"
                                            role="tab" aria-controls="settings" aria-selected="false">Pengaturan</a>
                                    </li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-pane active p-2" id="home" role="tabpanel"
                                        aria-labelledby="home-tab">

                                        <form action="/profile/change-profile" method="post">
                                            <div class="row mb-2">
                                                <div class="form-group col-sm-4">
                                                    <label for="name">Nama :</label>
                                                    <input type="text" name="name" class="form-control"
                                                        value="<%= profile.name %>" required>
                                                </div>
                                                <div class="form-group col-sm-4">
                                                    <label for="name">Email :</label>
                                                    <input type="email" name="email" class="form-control"
                                                        value="<%= profile.email %>" required>
                                                </div>
                                                <div class="form-group col-sm-4">
                                                    <label for="name">No. Telp :</label>
                                                    <input type="text" name="phone" class="form-control"
                                                        value="<%= profile.phone %>">
                                                </div>
                                            </div>
                                            <div class="row mb-2">
                                                <div class="form-group col-sm-6">
                                                    <label for="name">Alamat :</label>
                                                    <input type="text" name="address" class="form-control"
                                                        value="<%= profile.address %>">
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label for="name">Tempat Lahir :</label>
                                                    <input type="text" name="birth_place" class="form-control"
                                                        value="<%= profile.birth_place %>">
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label for="name">Tanggal Lahir :</label>
                                                    <input type="date" name="birth_date" class="form-control"
                                                        value="<%= profile.date_birth %>">
                                                </div>
                                            </div>
                                            <div class="row mb-2">
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                    <div class="tab-pane p-2" id="settings" role="tabpanel"
                                        aria-labelledby="settings-tab">
                                        <form action="/profile/change-password" method="post">
                                            <div class="row mb-2">
                                                <div class="form-group col-sm-6">
                                                    <label for="name">Password Lama :</label>
                                                    <input type="password" name="old_pass" value="" class="form-control"
                                                        required>
                                                </div>
                                                <div class="form-group col-sm-6">
                                                    <label for="name">Password Baru :</label>
                                                    <input type="password" name="new_pass" value="" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                            <div class="row mb-2">
                                                <div class="form-group col-sm-6">
                                                    <label for="name">Konfirmasi Password Baru :</label>
                                                    <input type="password" name="new_pass_confirm" value=""
                                                        class="form-control" required>
                                                </div>
                                            </div>
                                            <div class="row mb-2">
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--/tab-content-->

                        </div>
                        <!--/col-9-->
    </div>



    <%- include('layouts/vendor_js') %>


        <script src="https://unpkg.com/feather-icons"></script>
        <script>
            feather.replace()
        </script>

        <script>
            $(document).ready(function () {
                $('#comment').summernote({
                    height: 200
                });

                $("#file-image").change(function () {

                    var fd = new FormData();
                    var files = $('#file-image')[0].files;

                    // Check file selected or not
                    if (files.length > 0) {
                        fd.append('file_image', files[0]);

                        $.ajax({
                            url: '/profile/change-image',
                            type: 'post',
                            data: fd,
                            contentType: false,
                            processData: false,
                            success: function (response) {
                                alert('File berhasil diupload');
                            },
                        });
                    } else {
                        alert("Please select a file.");
                    }
                });
            });
        </script>

        <%- include('layouts/pusher', {ses : session}) %>

</body>

</html>