<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Login &mdash; Forum Travel</title>

    <%- include('../../layouts/backend/vendor_css') %>
</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div
                        class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="/backend/assets/img/stisla-fill.svg" alt="logo" width="100"
                                class="shadow-light rounded-circle">
                        </div>

                        <div class="card card-primary">
                            <div class="card-header">
                                <h4>Login</h4>
                            </div>

                            <div class="card-body">
                                <% if (msgSuccess !='' ) { %>
                                    <div class="alert alert-success" role="alert">
                                        <%= msgSuccess %>
                                    </div>
                                    <% } %>

                                        <% if (msgError !='' ) { %>
                                            <div class="alert alert-danger" role="alert">
                                                <%= msgError %>
                                            </div>
                                            <% } %>

                                                <form method="POST" action="/admin/postlog" class="needs-validation"
                                                    novalidate="">
                                                    <div class="form-group">
                                                        <label for="email">Username</label>
                                                        <input id="email" type="email" class="form-control"
                                                            name="username" tabindex="1" required autofocus>
                                                        <div class="invalid-feedback">
                                                            Masukkan username anda
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="d-block">
                                                            <label for="password" class="control-label">Password</label>
                                                        </div>
                                                        <input id="password" type="password" class="form-control"
                                                            name="password" tabindex="2" required>
                                                        <div class="invalid-feedback">
                                                            Masukkan password anda
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" name="remember"
                                                                class="custom-control-input" tabindex="3"
                                                                id="remember-me">
                                                            <label class="custom-control-label"
                                                                for="remember-me">Remember Me</label>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <button type="submit" class="btn btn-primary btn-lg btn-block"
                                                            tabindex="4">
                                                            Login
                                                        </button>
                                                    </div>
                                                </form>

                            </div>
                        </div>

                        <div class="simple-footer">
                            Copyright &copy; 2022. Travel Forum
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include('../../layouts/backend/vendor_js') %>
</body>

</html>