<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=anv, initial-scale=1.0" />
    <title>
        Guide Tour - <%= guide_detail.location %>
    </title>


    <%- include('../layouts/vendor_css') %>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote.min.css"
            integrity="sha512-m52YCZLrqQpQ+k+84rmWjrrkXAUrpl3HK0IO4/naRwp58pyr7rf5PO1DbI2/aFYwyeIH/8teS9HbLxVyGqDv/A=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />

        <style>
            nav {
                background: rgb(33, 33, 33);
                width: 100%;
                padding: 10px 0;
            }

            nav .menu {
                max-width: 1250px;

                margin: auto;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0 20px;
            }

            .menu .logo a {
                text-decoration: none;
                color: white;
                font-size: 25px;
                font-weight: 600;
                padding: 8px 15px;
                border-radius: 5px;
                transition: all 0.3s ease;
            }

            .menu .logo a:hover {
                background: orange;
                color: black;
            }

            .menu ul {
                display: inline-flex;
            }

            .menu ul li {
                list-style: none;
                margin-left: 7px;
            }

            .menu ul li a {
                text-decoration: none;
                color: white;
                font-size: 18px;
                font-weight: 500;

                padding: 8px 15px;
                border-radius: 5px;
                transition: all 0.3s ease;
            }

            .menu ul li a:hover {
                background: orange;
                color: black;
            }

            #container-box {
                padding: 20px;
            }

            .form-col,
            .topic-col {
                min-width: 16em;
            }

            .last-post-col,
            .created-col,
            .author-col {
                min-width: 12em;
            }

            .post-col {
                min-width: 20em;
            }

            .feather-16 {
                width: 16px;
                height: 16px;
            }

            .feather-24 {
                width: 24px;
                height: 24px;
            }

            .feather-32 {
                width: 32px;
                height: 32px;
            }
        </style>


</head>

<body>
    <nav>
        <div class="menu">
            <div class="logo">
                <a href="/">Web Forum</a>
            </div>
            <%- include('../layouts/menu', {ses : session}) %>
        </div>
    </nav>

    <div class="container" id="container-box">
        <% if (msgSuccess !=null && msgSuccess !='' ) { %>
            <div class="alert alert-success" role="alert">
                <%= msgSuccess %>
            </div>
            <% } %>

                <% if (msgError !=null && msgError !='' ) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= msgError %>
                    </div>
                    <% } %>
                        <div class="row">
                            <div class="col-12">
                                <h2 class="h4 text-white bg-info mb-0 p-4 rounded-top">
                                    <%= guide_detail.location %>
                                </h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <table class="table table-bordered mb-2">
                                            <tr>
                                                <td>Provinsi</td>
                                                <td>
                                                    <%= guide_detail.province_name %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Kota/Kabupaten</td>
                                                <td>
                                                    <%= guide_detail.city_name %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Budget</td>
                                                <td>
                                                    <%= guide_detail.budget_min %> - <%= guide_detail.budget_max %>
                                                </td>
                                            </tr>
                                        </table>

                                        <%- guide_detail.content %>
                                    </div>
                                </div>
                            </div>
                        </div>

    </div>



    <%- include('../layouts/vendor_js') %>

        <script src="https://unpkg.com/feather-icons"></script>
        <script>
            feather.replace()
        </script>


        <%- include('../layouts/pusher', {ses : session}) %>

</body>

</html>